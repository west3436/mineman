{
    "comment": "Embeddium Rendering Configuration - Optimized for modpack performance",
    
    "performance": {
        "use_particle_culling": true,
        "use_fog_occlusion": true,
        "use_block_face_culling": true,
        "use_compact_vertex_format": true,
        "use_translucent_face_sorting": true,
        "always_defer_chunk_updates": true,
        "animate_only_visible_textures": true,
        "use_entity_culling": true,
        "use_no_error_gl_context": true,
        "sort_behavior": "DYNAMIC_DEFER_NEARBY"
    },
    
    "quality": {
        "weather_quality": "DEFAULT",
        "leaves_quality": "DEFAULT",
        "enable_vignette": true,
        "mipmap_levels": 4
    },
    
    "advanced": {
        "use_advanced_staging_buffers": true,
        "cpu_render_ahead_limit": 3,
        "enable_memory_tracing": false,
        "allow_direct_memory_access": true,
        "chunk_builder_threads": 0,
        "max_pre_rendered_frames": 10
    },
    
    "render_distance": {
        "use_block_entity_render_distance_culling": true,
        "block_entity_render_distance": 64,
        "use_entity_render_distance_culling": true,
        "entity_render_distance": 64
    },
    
    "compatibility": {
        "reduce_resolution_on_mac": false,
        "ignore_driver_blacklist": false,
        "chunk_update_debug": false,
        "enable_api_debug": false
    },
    
    "extra": {
        "fps_counter": true,
        "fps_counter_position": "TOP_LEFT",
        "show_memory_usage": false,
        "enable_fullscreen_optimizations": true
    }
}
